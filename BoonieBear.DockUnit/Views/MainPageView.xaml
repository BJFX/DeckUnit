                <Button x:Name ="ReturnButton"  Opacity="0" Style="{StaticResource GlassButtonStyle}" Canvas.Bottom="0" Width="60" Height="60">
                    <Button.Background>
                        <ImageBrush  Stretch="Fill" ImageSource="/BoonieBear.DockUnit;component/Assets/return.png" />
                    </Button.Background>
                </Button>
                <Button x:Name="DeviceDataButton"  RenderTransform ="{StaticResource MainButtonRenderSize}" Style="{StaticResource RoundGlassButton}"  Width="{StaticResource MainRoundButtonWidth}" Height="{StaticResource MainRoundButtonWidth}" Tag="设备数据" HorizontalAlignment="Left" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" Cursor="Hand" Opacity="1" Focusable="False" Margin="-30,180">	
