<Page x:Class="BoonieBear.DockUnit.Views.MainPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainPageViewModel}"
      KeepAlive="True"   
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="MainPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Main Page " Style="{StaticResource WinTextTitle1Style}"/>

            <Button Content="Go back"
                    FontWeight="ExtraBold"
                    HorizontalContentAlignment="Left"
                    Margin="12 36 12 12"
                    Command="{Binding GoBackCommand}"
                    Style="{StaticResource WinButtonStyle}"/>
            <Button Content="Go Page1"
                    FontWeight="ExtraBold"
                    HorizontalContentAlignment="Left"
                    Margin="12 12 12 12"
                    Command="{Binding  GoPage1Command}"
                    Style="{StaticResource WinButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
